<body style="background-image:url(images/shop-img.jpg); background-position:center;">
<div class="content-wrapper">
    
    
    
   
        <div  class="container">

            <div class="row" style="display: flex;">
                <div class="col-md-6 col-sm-6" 
                style="max-width: 450px;
	margin: 100px auto 0;

	border-radius: 20px;
	-webkit-border-radius: 10px;">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            Đăng nhập
                        </div>
                        <div class="panel-body">
                            <form role="form" action="/dangnhap" method="post">
                                <div class="form-group">
                                    <label>Tên đăng nhập</label>
                                    <input onchange="validationForm()"
                                     id="username" required class="form-control" type="text" name="username"/>

                                </div>
                                <div class="form-group">
                                    <label>Mật khẩu</label>
                                    <input onchange="validationForm()"
                                     id="password" required class="form-control" type="password" name="password" />

                                </div>


                                <button id="button" disabled type="submit" class="btn btn-info" >Đăng nhập </button>

                            </form>
                            <div>{{err}}</div>
                        </div>
                    </div>
                </div>
            </div>
            <!--/.ROW-->

        </div>
        
    </div>
    <script>
        const validationForm = () =>{
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            if(!username || !password || username.trim().length === 0 || password.trim().length === 0 ){
                document.getElementById('button').disabled = true;
            }else{
                document.getElementById('button').disabled = false;
            }

        }
        </script>
        
    </body>